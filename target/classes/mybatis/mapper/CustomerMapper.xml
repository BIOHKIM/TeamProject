<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.project.dao.CustomerDAO">

    <!-- 유저 조회 -->
    <select id="listCustomer" resultType="org.project.vo.CustomerVO">
        select * from Customer
    </select>

    <select id="read" resultType="org.project.vo.CustomerVO">
        select
            userNo,userID,userPwd,userEmail,userJoinDate,managerClassification,userAddress,corpName,corpType,corpManager,phoneNo
            from Customer
            where userNo = #{userNo}
    </select>

    <update id="update">
        update Customer set userPwd=#{userPwd}, userEmail=#{userEmail}, phoneNo=#{phoneNo}
        where userNo=#{userNo}
    </update>

    <delete id="delete">
        delete from Customer
        where userNo=#{userNo}
    </delete>

</mapper>
